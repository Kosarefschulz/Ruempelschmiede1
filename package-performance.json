{
  "scripts": {
    "analyze": "ANALYZE=true npm run build",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html --chrome-flags='--headless'",
    "perf:audit": "npm run build && npm run lighthouse",
    "perf:bundle": "npm run analyze",
    "perf:check": "bundlesize"
  },
  "devDependencies": {
    "webpack-bundle-analyzer": "^4.9.0",
    "lighthouse": "^10.4.0",
    "bundlesize": "^0.18.1"
  },
  "bundlesize": [
    {
      "path": ".next/static/js/*.js",
      "maxSize": "250 kB"
    },
    {
      "path": ".next/static/css/*.css",
      "maxSize": "50 kB"
    }
  ]
}